{
  "compilerOptions": {
      "resolveJsonModule": true,
      "outDir": "dist",
      "sourceMap": true,
      "target": "esnext",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
          "@/*": ["src/*"]
      }
  },
  "include": ["src/**/*.ts", "src/docs/**/*.json"]
}
